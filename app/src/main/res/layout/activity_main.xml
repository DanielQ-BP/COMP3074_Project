<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/logoforparkspot"
        android:contentDescription="ParkSpot Logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER AS NEW USER"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingVertical="12dp"
        android:backgroundTint="@color/parkspot_green"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginSkipButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALREADY A USER? LOGIN"
        android:textColor="@color/parkspot_green"
        android:textSize="14sp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_marginTop="16dp" />

</LinearLayout>